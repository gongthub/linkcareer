@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var markName = $.request("markName");
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGridMultiSelect({
            url: "/SystemManage/Duty/GetEnableGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'Id', hidden: true, key: true },
                { label: '岗位名称', name: 'FullName', width: 150, align: 'left' },
                { label: '岗位编号', name: 'EnCode', width: 150, align: 'left' },
                {
                    label: '归属机构', name: 'OrganizeId', width: 150, align: 'left',
                    formatter: function (cellvalue, options, rowObject) {
                        return top.clients.organize[cellvalue] == null ? "" : top.clients.organize[cellvalue].fullname;
                    }
                }
            ],
            pager: "#gridPager",
            sortname: 'DepartmentId asc,CreatorTime desc',
            viewrecords: true,
            Complete: function () {
                setSelect();
            }
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }

    function setSelect() {
        if (!!keyValue) {
            $.ajax({
                url: "/WFManage/Flow/GetReviewerFormJson",
                data: { flowId: keyValue, markName: markName },
                dataType: "json",
                async: false,
                success: function (data) {
                    var reviewerorgs = data.ReviewerOrg;
                    if (reviewerorgs != null && reviewerorgs != undefined && reviewerorgs != "") {
                        reviewerorgs = reviewerorgs.split(',');
                        if (reviewerorgs != null && reviewerorgs != undefined && reviewerorgs.length > 0) {
                            for (var i = 0; i < reviewerorgs.length; i++) {
                                $("#gridList").setSelection(reviewerorgs[i]);
                            }
                        }
                    }
                }
            });
        }
    }

    function submitForm() {
        var selUsers = $("#gridList").jqGrid('getGridParam', 'selarrrow');
        $.modalClose();
        return selUsers;
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="账户/姓名/手机" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
